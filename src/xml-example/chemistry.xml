<!-- 
    See chemistry.ts for comparison

    Think of these as "instances" of the "classes" defined in design.xml
-->
<book-root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="./schemas/_autogen-design.xsd">
    <BoxedNote 
        selector=".chemist-portrait"
        borderColor="blue"
        groupBorderColor="green">

        <Title color="yellow" fontFamily="{typography.titleFont}"/>
    </BoxedNote>

    <BoxedNote selector=".everyday-life"
        borderColor="blue"
        groupBorderColor="green">
    
        <Title color="yellow" fontFamily="{typography.titleFont}"/> <!-- Maybe this whole element could be in a variable? Mabe not -->
    </BoxedNote>

    <EOCAssessments selector="[data-type = 'chapter'] > .os-exercises-container">
        <Container
            columnCount="2"
            columnGap="2.4 rem"
            columnWidth="auto"
        />
        <ProblemNumber
            color="{colorMap.fontBodyColor}"
        />
        <SectionMarginBottom
            marginBottom="{columnVSpacing(1)}"
        />
    </EOCAssessments>
</book-root>